<Window x:Class="FSMViewControl.Windows.AddVertexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddVertexWindow"
         Background="#3D5C5C" Height="300" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1093*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Button Content="Add it to the Graph" HorizontalAlignment="Left" Height="41" Margin="75,127,0,0" Grid.Row="1" Width="193" Click="add_vertex_"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,24,0,0" Grid.Row="2" VerticalAlignment="Top" Width="193" Click="Cancel" Height="41"/>
        <Label Content="Name of the Vertex: " Foreground="White" HorizontalAlignment="Left" Margin="10,27,0,0" Grid.Row="1" VerticalAlignment="Top" Width="115" Height="35"/>
        <TextBox Name="txtaddvertex" Margin="130,27,10,108" Grid.Row="1" KeyboardNavigation.ControlTabNavigation="Once" Grid.ColumnSpan="2" />
    </Grid>
</Window>
