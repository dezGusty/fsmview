<Window x:Class="FiniteStateMachineViewer.AddVertexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Vertex" Height="300" Width="300"
        Background="#3D5C5C">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1093*"/>
      <ColumnDefinition Width="250*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="100"/>
    </Grid.RowDefinitions>
    <Button Content="Add it to the Graph" HorizontalAlignment="Left" Margin="75,50,0,0" Grid.Row="2" VerticalAlignment="Top" Width="125" Click="add_vertex_"/>
    <Label Content="Name of the Vertex: " Foreground="White" HorizontalAlignment="Left" Margin="10,94,0,0" Grid.Row="1" VerticalAlignment="Top" Width="115"/>
    <TextBox Name="txtaddvertex" Margin="130,96,0,41" Grid.Row="1" KeyboardNavigation.ControlTabNavigation="Once" />
  </Grid>


</Window>
