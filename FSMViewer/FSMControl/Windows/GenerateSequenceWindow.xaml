<Window x:Class="FSMControl.Windows.GenerateSequenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate New Sequence" Height="300" Width="500"
        Background="#3D5C5C"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
  <Grid>
    <TextBlock  Name="firstStep" TextWrapping="Wrap"  FontSize="20" Foreground="White" Margin="40,10,40,198"/>
    <ComboBox  Name="veritces" ItemsSource="{Binding Vertices}" DisplayMemberPath="Text" Margin="175,84,40,147" SelectionChanged="veritces_SelectionChanged"/>
    <Button Name="undo" Content="Undo" Margin="61,186,258,51" Click="undo_Click"></Button>
    <Button Name="done" Content="Save sequence!" Margin="267,186,40,51" Click="done_Click"></Button>
    <Label Content="Next state:" HorizontalAlignment="Left" FontSize="20" Foreground="White" Margin="40,84,0,0" VerticalAlignment="Top" Width="130" Height="46"/>
  </Grid>
</Window>
